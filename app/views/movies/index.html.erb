<style>

    .container
    {
        display: flex;
    }
    .place
    {
        position: fixed;
        margin-top: 100px;
        left: 10px;
        margin: 0;
        padding: 0;
        width: 20%;  
    }

    #movies 
    {
        margin-left: auto;
        margin-right: auto;
        width: 50%;
        border-collapse: collapse;
        font-size: 18px;

    }
    #movies th, #movies td 
    {
        padding: 12px 15px;
        border: 1px solid #ddd;
    }
    #movies th 
    {
        background-color: #1a3300;
        color: white;
    }


    #movies td
    {
        text-align: center;
    }



    h1
    {
        text-align: center;
    }
    .butt 
    {
        padding-left: 48%; 
        align: center;
    }

    .button1 
    {
        border: none;
        font-size: 16px;
        cursor: pointer;
        padding: 10px 10px; 
        border-radius: 12px;
        text-align: center;
        text-decoration: none;
        background-color: #194d19;
        color: white;
    }
    .button1:hover
    {
        background-color: #e0e0d1;
    }

   

    .color-asc{background-color: #d4edda;}

    .color-desc {background-color: #f8d7da;}
</style>

<p style="color: green"><%= notice %></p>


<% content_for :title, "Movies" %>

<h1>Movies</h1>
<body>
    <div class="container">
        <div class="place">
            <label for="column">Choose column</label>
            <select name="column" id="column">
                <option value="" selected disabled hidden>Choose here</option>
                <option value="title">Title</option>
                <option value="rating">Rating</option>
                <option value="release_date">Release Date</option>
            </select>
            <br>
            <label for="order">Choose order</label>
            <select name="order" id="order">
                <option value="" selected disabled hidden>Choose sort order</option>
                <option value="asc">Ascending</option>
                <option value="desc">Descending</option>
            </select>
            <br>
            <button id="sort-button">Sort Movies</button>

            <p>
                The color for ascending order is: 
                <span style="display: inline-block; width: 20px; height: 20px; background-color: #d4edda; border: 1px solid #000;"></span>
            </p>
            <p>
                The color for descending order is: 
                <span style="display: inline-block; width: 20px; height: 20px; background-color: #f8d7da; border: 1px solid #000;"></span>
            </p>
            <p id="output"></p>
        </div>
        <table id="movies">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Rating</th>
                    <th>Release Date</th>
                </tr>
            </thead>
            <tbody id="movies-body">
                <% @movies.each do |movie| %>
                <tr>
                    <td><%= link_to movie.title, movie %></td>
                    <td><%= movie.rating %></td>
                    <td><%= movie.release_date.strftime('%d %B %Y') %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <br>
    </div>
    <br>
    <div class="butt">
        <%= link_to "New movie", new_movie_path, class: "button1" %>
    </div>

    <script>
        
        function calln() {
            var selectedColumn = localStorage.getItem('selectedColumn') || '';
            var selectedOrder = localStorage.getItem('selectedOrder') || '';

            function colorCodeRows(column, order) 
            {
                var rows = document.querySelectorAll('#movies-body tr');
                var arr = ["title", "rating", "release_date"];
                var pos = arr.indexOf(column);

                rows.forEach(function(row) 
                {
                    row.querySelectorAll('td').forEach(function(col) {
                        col.classList.remove('color-asc', 'color-desc');
                    });
                });

                if (pos !== -1) {
                    rows.forEach(function(row) 
                    {
                        var cols = row.children[pos];
                        cols.classList.remove('color-asc', 'color-desc');
                        if (order === 'asc') {
                            cols.classList.add('color-asc');
                        } else if (order === 'desc') {
                            cols.classList.add('color-desc');
                        }
                    });
                }
            }

            document.getElementById('sort-button').addEventListener('click', caller);
            function caller()
            {
                setval()
                clik()
            }
            function setval()
            {
                selectedColumn = document.getElementById('column').value;
                localStorage.setItem('selectedColumn', selectedColumn);
                selectedOrder = document.getElementById('order').value
                localStorage.setItem('selectedOrder', selectedOrder);
            }
            function clik() 
            {
                if (selectedColumn && selectedOrder) {
                    var url = new URL(window.location.href);
                    url.searchParams.set('column', selectedColumn);
                    url.searchParams.set('order', selectedOrder);
                    window.location.href = url.toString(); 
                } else {
                    alert('Please select both column and order for sorting.');
                }
            };
            colorCodeRows(selectedColumn, selectedOrder);
        };
        calln()
    </script>
</body>
